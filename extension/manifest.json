{
  "manifest_version": 2,

  "name": "Word annotations",
  "author": "James Hong",
  "version": "0.1.0",

  "description": "Augment your web-browsing experience with foreign words. This is done by inserting foreign words when a word with a known translation appears.",
  "icons": {"512": "icon.png"},
  "browser_action": {
    "default_icon": "img/icon-idle.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["load.js"],
    "matches": ["<all_urls>"]
  }],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": ["vocab.json"]
}
